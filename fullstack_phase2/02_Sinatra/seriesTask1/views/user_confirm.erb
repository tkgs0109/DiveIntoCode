<html>
  <head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="/users.css">
  </head>
  <% securePasswd = "" %>
  <% for i in 1..(@password.length) do %>
  <%   securePasswd << "*" %>
  <% end %>
  <body>
    <div class="container">
      <h1>登録確認</h1>
      <a href="/users">新規登録に戻る</a>
      <table class="form_registration">
        <tr>
          <th>お名前</th>
          <td>
            <%= @name %>
          </td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td>
            <%= @email %>
          </td>
        </tr>
        <tr>
          <th>パスワード</th>
          <td>
            <%= securePasswd %>
          </td>
        </tr>
      </table>
    </div>
  </body>
</html>
